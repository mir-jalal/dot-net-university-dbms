
@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div id="login-box-body" class="container">
        <h1><i class="fa fa-university" aria-hidden="true"></i>University DBMS</h1>
        <form action="/" method="post">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-user" aria-hidden="true"></i>&nbsp;Username:</span>
                </div>
                <input name="username" type="text" class="form-control"/>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-key"></i>&nbsp;Password:</span>
                </div>
                <input class="form-control" name="password" type="password"/>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Enter</button>
            </div>
        </form>
    </div>
</div>


